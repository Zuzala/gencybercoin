package problems_2014;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.Map;
import java.util.Scanner;

/*
 * By: Andy Malinsky
 * Purpose: CCSC Eastern programming contest 2014 - practice problem 1 (Root Beer Collection)
 * 
 */

public class Problem1 {

	private Scanner input = new Scanner(System.in);
	
	private int bottleTypeTotal;
	private ArrayList<String> bottleTypes = new ArrayList<String>();
	private Map<Integer, ArrayList<String>> bottles = new HashMap<Integer, ArrayList<String>>();
	
	private int colorID;
	private int bottleSize;
	private int bottleQuantity;
	private int[] cases;
	private int caseCounter;
	
	//constructor
	public Problem1() {
		
		input.useDelimiter(" ");
		setCases();
	}

	
	public void setCases() {
		
		caseCounter = 1;
		bottles.clear();
		
		while(input.hasNextInt() && input.nextInt() != 0) {
			
			bottleTypes.clear();
			System.out.println("Case " + caseCounter + ": Enter number of types of bottles...");
			bottleTypeTotal = input.nextInt();
			
			for(int i = 0; i < bottleTypeTotal; i++) {
				System.out.println("Type " + i + ": ");
				
			}
			
		}
	}
	
	
	
	
	
	
	
	
	//main method driver
	public static void main(String[] args) {
		
		Problem1 p = new Problem1();
	}
}
